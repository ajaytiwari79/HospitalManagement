<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml" />
    <springProfile name="development,devdeploy,test">

        <appender name="VISITOUR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file> visitour_change.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <!-- daily rollover -->
                <fileNamePattern>visitour_change.%d{yyyy-MM-dd-HH-mm}.log</fileNamePattern>
                <maxHistory>30</maxHistory>
            </rollingPolicy>

            <encoder>
                <pattern>%relative [%thread] %-5level %logger{35} - %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="com.kairos" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>


        <logger name="com.kairos.task.messaging.Receiver" level="DEBUG,INFO" additivity="false">
            <appender-ref ref="VISITOUR_FILE" />
        </logger>


    </springProfile>
    <springProfile name="production">
        <logger name="com.kairos" level="WARN,INFO" additivity="false">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
        </logger>
    </springProfile>
</configuration>


