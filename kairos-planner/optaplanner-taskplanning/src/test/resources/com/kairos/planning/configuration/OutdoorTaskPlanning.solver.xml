    <!--<constructionHeuristic>
        <queuedEntityPlacer>

            <entitySelector id="taskEntitySelector">
                <entityClass>com.kairos.planner.domain.Task</entityClass>
            </entitySelector>
            <changeMoveSelector>
                <entitySelector mimicSelectorRef="taskEntitySelector"/>
                <valueSelector>
                    <variableName>employee</variableName>
